<Window x:Class="ValheimPlusManager.ConfigurationManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValheimPlusManager.Models"
        mc:Ignorable="d"
        Title="ValheimPlus Manager | Configuration manager" Height="750" Width="1050"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}" Icon="/valheim-plus.png" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:ValheimPlusConf/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="655"/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="275" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Label Content="Settings to enable" Style="{StaticResource MaterialDesignLabel}" FontSize="24" Margin="10,1,0,0"/>
            <ListView Grid.Column="0" Grid.ColumnSpan="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="6,3,2,2"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn />
                    </GridView>
                </ListView.View>
                <CheckBox IsChecked="{Binding advancedBuildingModeEnabled}" Content="Enable advanced building mode" />
                <CheckBox IsChecked="{Binding advancedEditingModeEnabled}" Content="Enable advanced editing mode" />
                <CheckBox IsChecked="{Binding armorSettingsEnabled}" Content="Enable armor settings" />
                <CheckBox IsChecked="{Binding bedSettingsEnabled}" Content="Enable bed settings" />
                <CheckBox IsChecked="{Binding beehiveSettingsEnabled}" Content="Enable beehive settings" />
                <CheckBox IsChecked="{Binding buildingSettingsEnabled}" Content="Enable building settings" />
                <CheckBox IsChecked="{Binding cameraSettingsEnabled}" Content="Enable camera settings" />
                <CheckBox IsChecked="{Binding craftFromChestSettingsEnabled}" Content="Enable craft from chest settings" />
                <CheckBox IsChecked="{Binding durabilitySettingsEnabled}" Content="Enable durability settings" />
                <CheckBox IsChecked="{Binding experienceSettingsEnabled}" Content="Enable experience settings" />
                <CheckBox IsChecked="{Binding fermenterSettingsEnabled}" Content="Enable fermenter settings" />
                <CheckBox IsChecked="{Binding fireSourceSettingsEnabled}" Content="Enable fire source settings" />
                <CheckBox IsChecked="{Binding firstPersonSettingsEnabled}" Content="Enable first person settings" />
                <CheckBox IsChecked="{Binding foodSettingsEnabled}" Content="Enable food settings" />
                <CheckBox IsChecked="{Binding freePlacementRotationSettingsEnabled}" Content="Enable free placement rotation" />
                <CheckBox IsChecked="{Binding furnaceSettingsEnabled}" Content="Enable furnace settings" />
                <CheckBox IsChecked="{Binding gameSettingsEnabled}" Content="Enable game settings" />
                <CheckBox IsChecked="{Binding gatheringSettingsEnabled}" Content="Enable gathering settings" />
                <CheckBox IsChecked="{Binding gridAlignmentSettingsEnabled}" Content="Enable grid alignment settings" />
                <CheckBox IsChecked="{Binding hotkeysSettingsEnabled}" Content="Enable hotkeys settings" />
                <CheckBox IsChecked="{Binding hudSettingsEnabled}" Content="Enable HUD settings" />
                <CheckBox IsChecked="{Binding inventorySettingsEnabled}" Content="Enable inventory settings" />
                <CheckBox IsChecked="{Binding itemsSettingsEnabled}" Content="Enable item settings" />
                <CheckBox IsChecked="{Binding kilnSettingsEnabled}" Content="Enable kiln settings" />
                <CheckBox IsChecked="{Binding mapSettingsEnabled}" Content="Enable map settings" />
                <CheckBox IsChecked="{Binding playerSettingsEnabled}" Content="Enable player settings" />
                <CheckBox IsChecked="{Binding serverSettingsEnabled}" Content="Enable server settings" />
                <CheckBox IsChecked="{Binding shieldsSettingsEnabled}" Content="Enable shields settings" />
                <CheckBox IsChecked="{Binding smelterSettingsEnabled}" Content="Enable smelter settings" />
                <CheckBox IsChecked="{Binding spinningWheelSettingsEnabled}" Content="Enable spinning wheel settings" />
                <CheckBox IsChecked="{Binding staminaSettingsEnabled}" Content="Enable stamina settings" />
                <CheckBox IsChecked="{Binding staminaUsageSettingsEnabled}" Content="Enable stamina usage settings" />
                <CheckBox IsChecked="{Binding structuralIntegritySettingsEnabled}" Content="Enable structural integrity settings" />
                <!--<CheckBox IsChecked="{Binding timeSettingsEnabled}" Content="Enable time settings" />-->
                <CheckBox IsChecked="{Binding valheimPlusConfigurationEnabled}" Content="Enable ValheimPlus settings" />
                <CheckBox IsChecked="{Binding wagonSettingsEnabled}" Content="Enable wagon settings" />
                <CheckBox IsChecked="{Binding wardSettingsEnabled}" Content="Enable ward settings" />
                <CheckBox IsChecked="{Binding windmillConfigurationEnabled}" Content="Enable windmill settings" />
                <CheckBox IsChecked="{Binding workbenchSettingsEnabled}" Content="Enable workbench settings" />
            </ListView>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <TabControl Grid.ColumnSpan="2" Margin="-0,0,0,0" Grid.Column="1">
                <TabItem IsEnabled="{Binding advancedBuildingModeEnabled}" Header="Advanced building mode">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Advanced building mode" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBox Width="382" Text="{Binding enterAdvancedBuildingMode}" materialDesign:HintAssist.Hint="Enter the advanced building mode with this key when building" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0" />
                        <TextBox Width="382" Text="{Binding exitAdvancedBuildingMode}" materialDesign:HintAssist.Hint="Exit the advanced building mode with this key when building" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" />
                        <TextBox Width="382" Text="{Binding copyObjectRotation}" materialDesign:HintAssist.Hint="Copy the object rotation of the currently selected object" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,0,0" />
                        <TextBox Width="382" Text="{Binding pasteObjectRotation}" materialDesign:HintAssist.Hint="Apply the copied object rotation to the currently selected object" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,220,0,0" />
                        <TextBox Width="382" Text="{Binding increaseScrollSpeed}" materialDesign:HintAssist.Hint="Increases the amount an object rotates and moves" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,270,0,0" />
                        <TextBox Width="382" Text="{Binding decreaseScrollSpeed}" materialDesign:HintAssist.Hint="Decreases the amount an object rotates and moves" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,320,0,0" />
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding advancedEditingModeEnabled}" Header="Advanced editing mode">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Advanced editing mode" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBox Width="382" Text="{Binding enterAdvancedEditingMode}" materialDesign:HintAssist.Hint="Enter the advanced editing mode with this key" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0" />
                        <TextBox Width="382" Text="{Binding resetAdvancedEditingMode}" materialDesign:HintAssist.Hint="Reset the object to its original position and rotation" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" />
                        <TextBox Width="382" Text="{Binding abortAndExitAdvancedEditingMode}" materialDesign:HintAssist.Hint="Exit the advanced editing mode with this key and reset the object" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,0,0" />
                        <TextBox Width="382" Text="{Binding confirmPlacementOfAdvancedEditingMode}" materialDesign:HintAssist.Hint="Confirm the placement of the object and place it" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,220,0,0" />
                        <TextBox Width="382" Text="{Binding copyObjectRotationAEM}" materialDesign:HintAssist.Hint="Copy the object rotation of the currently selected object" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,270,0,0" />
                        <TextBox Width="382" Text="{Binding pasteObjectRotationAEM}" materialDesign:HintAssist.Hint="Apply the copied object rotation to the currently selected object" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,320,0,0" />
                        <TextBox Width="382" Text="{Binding increaseScrollSpeedAEM}" materialDesign:HintAssist.Hint="Increases the amount an object rotates and moves" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,370,0,0" />
                        <TextBox Width="382" Text="{Binding decreaseScrollSpeedAEM}" materialDesign:HintAssist.Hint="Decreases the amount an object rotates and moves" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,420,0,0" />
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding armorSettingsEnabled}" Header="Armor">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Armor" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBlock HorizontalAlignment="Left" Margin="10,40,0,0" Style="{StaticResource MaterialDesignCaptionTextBlock}" Text="Each of these values increase or reduce the armor of the specific item type by %" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding helmetsArmor}" materialDesign:HintAssist.Hint="Helmets" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding chestsArmor}" materialDesign:HintAssist.Hint="Chests" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding legsArmor}" materialDesign:HintAssist.Hint="Legs" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,0,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding capesArmor}" materialDesign:HintAssist.Hint="Capes" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,220,0,0" />
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding bedSettingsEnabled}" Header="Bed">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Bed" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBlock HorizontalAlignment="Left" Margin="10,40,0,0" Style="{StaticResource MaterialDesignCaptionTextBlock}" Text="Settings for how beds work" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <CheckBox Content="When hovering over a bed you will be presented with a Hot-Key 'LShift+E' to sleep without setting spawn point" IsChecked="{Binding sleepWithoutSpawn}" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="With this option enabled only beds that are not claimed by other players can be slept on without setting spawn-point using 'Shift+E'" IsChecked="{Binding unclaimedBedsOnly}" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding beehiveSettingsEnabled}" Header="Beehive">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Beehive" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="382" Text="{Binding honeyProductionSpeed}" materialDesign:HintAssist.Hint="Speed at which the bees produce honey in seconds" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="382" Text="{Binding maximumHoneyPerBeehive}" materialDesign:HintAssist.Hint="Maximum amount of honey in beehives" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="382" Text="{Binding autoDepositHoneyRange}" materialDesign:HintAssist.Hint="Range for auto-deposit into chests" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,0,0" />
                        <CheckBox Content="Instead of dropping the items, they will be placed inside nearby chests instead" IsChecked="{Binding autoDepositHoney}" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Display the minutes and seconds until the beehive produces honey on hover" IsChecked="{Binding showDurationBeehive}" HorizontalAlignment="Left" Margin="10,260,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding buildingSettingsEnabled}" Header="Building">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Building" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="506" Text="{Binding maximumPlacementDistance}" materialDesign:HintAssist.Hint="The maximum range that you can place build objects at" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="506" Text="{Binding pieceComfortRadius}" materialDesign:HintAssist.Hint="The radius in meters in which a piece must be to contribute to the comfort level" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="506" Text="{Binding areaRepairRadius}" materialDesign:HintAssist.Hint="Sets the area repair radius. A value of 7.5 would mean your repair radius is 7.5m" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,0,0" />
                        <CheckBox Content="No invalid placement restrictions" IsChecked="{Binding noInvalidPlacementRestriction}" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="No weather damage" IsChecked="{Binding noWeatherDamage}" HorizontalAlignment="Left" Margin="10,260,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="When destroying a building piece, setting this to true will ensure it always drops full resources" IsChecked="{Binding alwaysDropResources}" HorizontalAlignment="Left" Margin="10,290,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="When destroying a building piece, setting this to true will ensure it always drops pieces that the devs have marked as 'do not drop'" IsChecked="{Binding alwaysDropExcludedResources}" HorizontalAlignment="Left" Margin="10,320,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Setting this to true will cause repairing with the hammer to repair in a radius" IsChecked="{Binding enableAreaRepair}" HorizontalAlignment="Left" Margin="10,350,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Removes the 'Mystical forces' building prevention and allows destruction of build objects in those areas with the hammer" IsChecked="{Binding noMysticalForcesPreventPlacementRestriction}" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding durabilitySettingsEnabled}" Header="Durability">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Durability" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBlock HorizontalAlignment="Left" Margin="10,40,0,0" Style="{StaticResource MaterialDesignCaptionTextBlock}" Text="Each of these values increase or reduce the durability of the specific item type by %" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding axesDurability}" materialDesign:HintAssist.Hint="Axes" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding pickaxesDurability}" materialDesign:HintAssist.Hint="Pickaxes" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,70,10,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding hammerDurability}" materialDesign:HintAssist.Hint="Hammers" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding cultivatorDurability}" materialDesign:HintAssist.Hint="Cultivators" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,120,10,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding hoeDurability}" materialDesign:HintAssist.Hint="Hoes" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,0,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding weaponsDurability}" materialDesign:HintAssist.Hint="Weapons" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,170,10,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding armorDurability}" materialDesign:HintAssist.Hint="Armors" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,220,0,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding bowsDurability}" materialDesign:HintAssist.Hint="Bows" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,220,10,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding shieldsDurability}" materialDesign:HintAssist.Hint="Shields" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,270,0,0" />
                        <TextBox PreviewTextInput="FloatValidationTextBox" Width="350" Text="{Binding torchDurability}" materialDesign:HintAssist.Hint="Torches" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,270,10,0" />
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding inventorySettingsEnabled}" Header="Inventory">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Inventory" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding playerInventoryRows}" materialDesign:HintAssist.Hint="Player inventory number of rows (min 4, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding woodChestRows}" materialDesign:HintAssist.Hint="Wood chest rows (min 2, max 10)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,70,10,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding woodChestColumns}" materialDesign:HintAssist.Hint="Wood chest columns (min 5, max 8)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding personalChestRows}" materialDesign:HintAssist.Hint="Personal chest rows (min 3, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,120,10,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding personalChestColumns}" materialDesign:HintAssist.Hint="Personal chest columns (min 3, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding ironChestRows}" materialDesign:HintAssist.Hint="Iron chest rows (min 3, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,170,10,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding ironChestColumns}" materialDesign:HintAssist.Hint="Iron chest columns (min 6, max 8)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,220,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding cartInventoryRows}" materialDesign:HintAssist.Hint="Cart rows (min 3, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,220,10,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding cartInventoryColumns}" materialDesign:HintAssist.Hint="Cart columns (min 3, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,270,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding karveInventoryRows}" materialDesign:HintAssist.Hint="Karve rows (min 3, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,270,10,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding karveInventoryColumns}" materialDesign:HintAssist.Hint="Karve columns (min 3, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,320,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding longboatInventoryRows}" materialDesign:HintAssist.Hint="Longboat rows (min 3, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,320,10,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="350" Text="{Binding longboatInventoryColumns}" materialDesign:HintAssist.Hint="Longboat columns (min 3, max 20)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,370,0,0" />
                        <CheckBox Content="Top to bottom sorting" IsChecked="{Binding inventoryFillTopToBottom}" HorizontalAlignment="Left" Margin="10,430,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Make all stacks try to merge with an existing stack (tombstone)" IsChecked="{Binding mergeWithExistingStacks}" HorizontalAlignment="Left" Margin="180,430,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding itemsSettingsEnabled}" Header="Items">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Items" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="563" Text="{Binding baseItemWeightReduction}" materialDesign:HintAssist.Hint="Increase or reduce item weight by % percent. The value -50 will reduce item weight of every object by 50%" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="563" Text="{Binding itemStackMultiplier}" materialDesign:HintAssist.Hint="Increase the size of all item stacks by %. The value 50 would set a usual item stack of 100 to be 150" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="563" Text="{Binding droppedItemOnGroundDurationInSeconds}" materialDesign:HintAssist.Hint="Set duration that dropped items live before despawning, default is 3600 seconds" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,0,0" />
                        <CheckBox Content="Enable teleport with ores and other usually restricted objects" IsChecked="{Binding noTeleportPrevention}" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Items float in water" IsChecked="{Binding itemsFloatInWater}" HorizontalAlignment="Left" Margin="10,260,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding fermenterSettingsEnabled}" Header="Fermenter">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Fermenter" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="552" Text="{Binding fermenterDuration}" materialDesign:HintAssist.Hint="Speed at which the fermenter produce product in seconds" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0" />
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="552" Text="{Binding fermenterItemsProduced}" materialDesign:HintAssist.Hint="Amount produced items" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,120,0,0" />
                        <CheckBox Content="Display the minutes and seconds until the fermenter is done on hover" IsChecked="{Binding showFermenterDuration}" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Instead of dropping the items, they will be placed inside nearby chests" IsChecked="{Binding autoDepositFermenter}" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Look for mead inside nearby chests" IsChecked="{Binding autoFuelFermenter}" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Disable to enable private area check when looking for chests" IsChecked="{Binding ignorePrivateAreaCheckFermenter}" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top"/>
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="552" Text="{Binding autoRangeFermenter}" materialDesign:HintAssist.Hint="The range of the chest detection for the auto deposit and fuel features (Maximum is 50)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,310,0,0" />
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding fireSourceSettingsEnabled}" Header="Fire sources">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Fire sources" TextWrapping="Wrap" VerticalAlignment="Top" />
                        <CheckBox Content="If set to true, torch-type fire sources will stay at max fuel level once filled" IsChecked="{Binding torchesFireSource}" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="If set to true, non torch-type fire sources will stay at max fuel level once filled" IsChecked="{Binding firesFireSource}" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Look for fuel inside nearby chests" IsChecked="{Binding autoFuelFireSource}" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="Ignore private area check" IsChecked="{Binding ignorePrivateAreaCheckFireSource}" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top"/>
                        <TextBox PreviewTextInput="IntValidationTextBox" Width="382" Text="{Binding autoRangeFireSource}" materialDesign:HintAssist.Hint="The range of the chest detection for the auto fuel features (max 50)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,190,0,0" />
                    </Grid>
                </TabItem>
                <TabItem IsEnabled="{Binding firstPersonSettingsEnabled}" Header="First person">
                    <Grid Background="#FFE5E5E5">
